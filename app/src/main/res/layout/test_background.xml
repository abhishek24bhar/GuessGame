<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:background="#1e90ff">

    <game.guess.com.guessgame.LongShadowTextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:text_size="52sp"
        android:textStyle="bold"
        app:text_color="#ffffff"
        app:shadow_color="#1E9099"
        app:text="DUMBCHARADES!"
        />
    <LinearLayout android:layout_height="180dp"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/male3"
            android:id="@+id/quickplay"
            android:scaleType="fitXY"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/male2"
            android:scaleType="fitXY"
            android:id="@+id/versus"
            android:layout_weight="1"/>
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="0dp"
            android:weightSum="3"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#181011"
                android:text="More Games"
                android:textSize="22sp"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:height="60dp"
                android:padding="6dp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:height="60dp"
                android:padding="6dp"
                android:background="#181011"
                android:text="Show Love"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
            <Button
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="#7CFC00"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:drawablePadding="10dp"
                android:gravity="left|center"
                android:height="60dp"
                android:padding="6dp"
                android:text="How To Play"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:id="@+id/howtoplay"
                android:textStyle="bold" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
